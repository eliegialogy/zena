      <li class='title' do='title'/>
      <li do='form' on='edit'>
        <r:input name='title'/> <r:input type='checkbox' name='v_status' value='50'/>
      </li>
    </ul>
  </div>

  <div class='test' id='edit3' do='selenium'>
    <h3>edit3</h3>
