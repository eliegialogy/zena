if @user.errors.empty?
  page.insert_html :before, 'add_user', :partial => 'users/li', :collection => [@user]
  @user = secure(User) { User.new }
  page.replace_html 'add_user_form', :partial => 'users/form'
  page << "$('user_login').focus();"
else
  page.replace_html 'add_user_form', :partial => 'users/form'
end